<% unless action_name == "home" %>
   <%= render partial: "layouts/navbar" %>
<% end %>

    <!-- Log In Modal -->
    <div tabindex="-1" class="modal fade" id="form-dialog" style="display: none;" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header pmd-modal-bordered">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
            <h2 class="pmd-card-title-text">Log In</h2><!-- Title -->
          </div>
          <%= form_for :session, url: session_path do |form| %>
          <div class="modal-body">
            <div class="form-group pmd-textfield pmd-textfield-floating-label">
              <label for="first-name">Email Address</label>
              <input type="text" class="mat-input form-control" name=session[email]>
            </div>
            <div class="form-group pmd-textfield pmd-textfield-floating-label">
              <label for="first-name">Password</label>
              <input type="password" class="mat-input form-control" name=session[password]>
            </div>
          
          </div>
          <div class="pmd-modal-action">
            <%= form.submit do%><button data-dismiss="modal"  class="btn pmd-ripple-effect btn-primary" type="button">Log In</button><% end %>
            <%= link_to "/auth/facebook" do %>
              <img id="facebook_login" class=".pmd-z-depth-3" src="/assets/facebook_login.png" alt="Sign In With Facebook" height='40px'>
            <% end %>
          </div>
          <%end%>
        </div>
      </div>
    </div>

    <!-- Sign Up Modal -->
    <div tabindex="-1" class="modal fade" id="form-dialog-signup" style="display: none;" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header pmd-modal-bordered">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
            <h2 class="pmd-card-title-text">Sign Up</h2><!-- Title -->
          </div>
          <%= form_for :user, url: users_path do |form| %>
          <div class="modal-body">
            <div class="form-group pmd-textfield pmd-textfield-floating-label">
              <label for="first-name">First Name</label>
              <input type="text" class="mat-input form-control" name=user[first_name]>
            </div>
            <div class="form-group pmd-textfield pmd-textfield-floating-label">
              <label for="last-name">Last Name</label>
              <input type="text" class="mat-input form-control" name=user[last_name]>
            </div>
            <div class="form-group pmd-textfield pmd-textfield-floating-label">
              <label for="email">Email Address</label>
              <input type="text" class="mat-input form-control" name=user[email]>
            </div>
            <div>
              <label for="profilepic">Profile Picture</label>
              <%= form.file_field :profilepic %>
            </div>
            <div class="form-group pmd-textfield pmd-textfield-floating-label">
              <label for="first-name">Password</label>
              <input type="password" class="mat-input form-control" name=user[password]>
            </div>
            <label class="checkbox-inline pmd-checkbox pmd-checkbox-ripple-effect">
              <input type="checkbox" value="">
              <span class="pmd-checkbox"> Accept Terms and conditions</span> 
            </label>
          </div>
          <div class="pmd-modal-action">
            <%= form.submit :Submit, class: 'btn pmd-ripple-effect btn-primary' %>
            <%= link_to "/auth/facebook" do %>
              <img id="facebook_login" class=".pmd-z-depth-3" src="/assets/facebook_login.png" alt="Sign In With Facebook" height='40px'>
            <% end %>
          </div>
          <%end%>
        </div>
      </div>
    </div>
    
    <%= yield %>

  <div class="pmd-sidebar-overlay"></div>
</section>
  </body>
</html>
